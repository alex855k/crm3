@model CRM.Application.Core.ViewModels.BudgetViewModel

@Html.Hidden("hiddenUrl","Budget")
<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@CRM.Application.Core.Resources.Budget.Budget.BudgetTitle </h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <!-- Modal -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                &times;
                                            </button>
                                            <h4 class="modal-title" id="myModalLabel">@CRM.Application.Core.Resources.Budget.Budget.CreateBudget</h4>
                                        </div>
                                        <div class="modal-body">
                                            <form id="budgetForm">
                                                @Html.HiddenFor(x => x.Id, new {@id = "budgetId" })
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.DropDownListFor(x => x.SalesPersonId, new SelectList(Model.SalesPersonList, "Id", "FullName"), CRM.Application.Core.Resources.Budget.Budget.SelectSalesman, new { id = "salesPerson", @class = "select2", @style = "width:100%" })
                                                            @Html.ValidationMessageFor(x => x.SalesPersonId, null, new { @class = "invalid validation" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(x => x.BudgetAmount, new {id= "budgetAmount", @class = "form-control", @placeHolder = "Budget Amount" })
                                                            @Html.ValidationMessageFor(x => x.BudgetAmount, null, new { @class = "invalid validation" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <div class="input-group" data-provide="">
                                                                <input id="createBudgetDate" type="text" class="form-control" placeholder="">
                                                                <div class="input-group-addon">
                                                                    <span class="glyphicon glyphicon-th"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                                @CRM.Application.Core.Resources.General.General.Cancel
                                            </button>
                                            <button id="saveBudget" type="button" class="btn btn-primary">
                                                @CRM.Application.Core.Resources.General.General.Save
                                            </button>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div>
                            <!-- /.modal -->



                            <div id="datatable_fixed_column_wrapper" class="dataTables_wrapper form-inline no-footer">
                                <div class="dt-toolbar">
                                    <div class="col-xs-12 col-sm-6 hidden-xs">
                                        <div id="datatable_fixed_column_filter" class="dataTables_filter">
                                            <label>
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                                <input id="commonFilter" type="search" class="form-control" placeholder="" aria-controls="datatable_fixed_column">
                                            </label>
                                        </div>
                                    </div><div class="col-sm-6 col-xs-12 hidden-xs">

                                        <div class="toolbar">

                                            <div class="text-right">
                                                <a class="btn btn-primary" href="javascript:void(0)" data-toggle="modal" data-target="#myModal">@CRM.Application.Core.Resources.Budget.Budget.AddNewBudget</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table id="datatable_fixed_column" class="table table-striped table-bordered dataTable no-footer" width="100%" role="grid" aria-describedby="datatable_fixed_column_info" style="width: 100%;">
                                    <thead>
                                        <tr id="filterTr" role="row">
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                                <div class="input-group">
                                                    <div class="input-group" data-provide="">
                                                        <input id="budgetDate" type="text" class="form-control" placeholder="">
                                                        <div class="input-group-addon">
                                                            <span class="glyphicon glyphicon-th"></span>
                                                        </div>
                                                    </div>
                                                    <div style="padding:5px" class="input-group-addon">
                                                        <div class="btn-group">
                                                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                                                <span class="fa fa-filter"></span>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li class="active">
                                                                    <a class="operatorDropdown" data-operator="Contains" data-forInput="budgetDate" href="javascript:void(0);">Contains</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="StartsWith" data-forInput="budgetDate" href="javascript:void(0);">StartsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="EndsWith" data-forInput="budgetDate" href="javascript:void(0);">EndsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="Equals" data-forInput="budgetDate" href="javascript:void(0);">Equals</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThan" data-forInput="budgetDate" href="javascript:void(0);">GreaterThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThanOrEqual" data-forInput="budgetDate" href="javascript:void(0);">GreaterThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThan" data-forInput="budgetDate" href="javascript:void(0);">LessThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThanOrEqual" data-forInput="budgetDate" href="javascript:void(0);">LessThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="NotEqual" data-forInput="budgetDate" href="javascript:void(0);">NotEqual</a>
                                                                </li>
                                                            </ul>
                                                        </div>

                                                    </div>
                                                </div>
                                            </th>
                                            <th class="hasinput" style="width:16%" rowspan="1" colspan="1">
                                                <div class="input-group">
                                                    <input id="salesPerson" data-searchKey="SalesPerson" data-selectedOperator="Contains" class="form-control query" placeholder="@CRM.Application.Core.Resources.Budget.Budget.FilterSalesPerson" type="text">
                                                    <div style="padding:5px" class="input-group-addon">
                                                        <div class="btn-group">
                                                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                                                <span class="fa fa-filter"></span>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li class="active">
                                                                    <a class="operatorDropdown" data-operator="Contains" data-forInput="salesPerson" href="javascript:void(0);">Contains</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="StartsWith" data-forInput="salesPerson" href="javascript:void(0);">StartsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="EndsWith" data-forInput="salesPerson" href="javascript:void(0);">EndsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="Equals" data-forInput="salesPerson" href="javascript:void(0);">Equals</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThan" data-forInput="salesPerson" href="javascript:void(0);">GreaterThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThanOrEqual" data-forInput="salesPerson" href="javascript:void(0);">GreaterThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThan" data-forInput="salesPerson" href="javascript:void(0);">LessThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThanOrEqual" data-forInput="salesPerson" href="javascript:void(0);">LessThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="NotEqual" data-forInput="salesPerson" href="javascript:void(0);">NotEqual</a>
                                                                </li>
                                                            </ul>
                                                        </div>

                                                    </div>
                                                </div>
                                            </th>
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                                <div class="input-group">
                                                    <input id="budgetAmount" data-searchKey="BudgetAmount" data-selectedOperator="Contains" class="form-control query" placeholder="@CRM.Application.Core.Resources.Budget.Budget.FilterBudgetAmount" type="text">
                                                    <div style="padding:5px" class="input-group-addon">
                                                        <div class="btn-group">
                                                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                                                <span class="fa fa-filter"></span>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li class="active">
                                                                    <a class="operatorDropdown" data-operator="Contains" data-forInput="budgetAmount" href="javascript:void(0);">Contains</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="StartsWith" data-forInput="budgetAmount" href="javascript:void(0);">StartsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="EndsWith" data-forInput="budgetAmount" href="javascript:void(0);">EndsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="Equals" data-forInput="budgetAmount" href="javascript:void(0);">Equals</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThan" data-forInput="budgetAmount" href="javascript:void(0);">GreaterThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThanOrEqual" data-forInput="budgetAmount" href="javascript:void(0);">GreaterThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThan" data-forInput="budgetAmount" href="javascript:void(0);">LessThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThanOrEqual" data-forInput="budgetAmount" href="javascript:void(0);">LessThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="NotEqual" data-forInput="budgetAmount" href="javascript:void(0);">NotEqual</a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </th>
                                          
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                            </th>
                                        </tr>
                                        <tr role="row">
                                            <th class="sortTable sorting_asc" data-sortKey="CompanyName" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 187px;">
                                                @CRM.Application.Core.Resources.Budget.Budget.Date
                                            </th>
                                            <th class="sortTable sorting" data-activesort="" data-sort="" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 200px;">
                                                @CRM.Application.Core.Resources.Budget.Budget.SalesPerson
                                            </th>
                                            <th class="sortTable sorting" data-sortKey="Address" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 200px;">
                                                @CRM.Application.Core.Resources.Budget.Budget.BudgetInKr
                                            </th>
                                            <th tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 178px;">
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id=";istDiv">
                                        @{Html.RenderPartial("_BudgetList", Model);}
                                    </tbody>
                                </table>
                                <div id="paginationDiv">
                                    @{Html.RenderPartial("_BudgetPagination", Model);}
                                </div>
                            </div>
                            <div class="row smart-form">
                                <section class="col col-3">
                                    <label class="toggle">
                                        @Html.HiddenFor(x => x.QueryOperatorComparer, new { @name = "tableComparer", @id = "hiddenTableComparer" })
                                        <input type="checkbox" id="switchTableComparer" name="checkbox-toggle" checked="checked">
                                        <i data-swchon-text="And" data-swchoff-text="Or"></i> Search Comparer
                                    </label>
                                </section>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
<script src="~/Scripts/CRM/Enum/SortDirection.js"></script>
<script src="~/Scripts/CRM/Budget/Budget.js"></script>
<script src="~/Scripts/CRM/General/GenericTable.js"></script>