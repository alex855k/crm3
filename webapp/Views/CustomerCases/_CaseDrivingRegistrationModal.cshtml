@using CRM.Application.Core.Resources.Customers
@using CRM.Application.Core.Resources.DrivingRegistrations
@model CRM.Application.Core.ViewModels.DrivingRegistrationViewModel
@{
    Layout = null;
}
@Html.HiddenFor(x => x.CurrentUserID, new { id = "hiddenCurrentUserId" })
<div class="modal-dialog modal-md">
    <div class="modal-content" id="modalContent">
        <div style="background: dodgerblue;" class="modal-header">
            <button style="color: white" type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h4 class="modal-title" style="color: white" id="myModalLabel">@DrivingReg.DrivingRegistration</h4>
        </div>
        <div class="modal-body">
            <div class="panel-group smart-accordion-default" id="accordion-4">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion-4" href="#collapseOne-4" aria-expanded="false" class="collapsed"> <i class="fa fa-fw fa-plus-circle txt-color-green"></i> <i class="fa fa-fw fa-minus-circle txt-color-red"></i>@DrivingReg.Create</a></h4>
                    </div>
                    <div id="collapseOne-4" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="drivingRegDescription">@DrivingReg.Description</label>
                                        <textarea class="form-control" id="drivingRegDescription" placeholder="@DrivingReg.DrivingRegistration @Customer.Description" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="drivingRegDate">@DrivingReg.Date</label>
                                        <input class="form-control" id="drivingRegDate" placeholder="@DrivingReg.Date" rows="5">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="drivingRegAddressFrom">@DrivingReg.AddressFrom</label>
                                    <input id="drivingRegAddressFrom" placeholder="@DrivingReg.DrivingRegistration @DrivingReg.AddressFrom" class="form-control" type="text">
                                </div>
                                <div class="col-md-6">
                                    <label for="drivingRegAddressTo">@DrivingReg.AddressTo</label>
                                    <input id="drivingRegAddressTo" placeholder="@DrivingReg.AddressTo" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="drivingRegStartMileage">@DrivingReg.StartMileage</label>
                                    <input id="drivingRegStartMileage" placeholder="@DrivingReg.StartMileage" class="form-control" type="text">
                                </div>
                                <div class="col-md-6">
                                    <label for="drivingRegEndMileage">@DrivingReg.EndMileage</label>
                                    <input id="drivingRegEndMileage" placeholder="@DrivingReg.EndMileage" class="form-control" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div>
                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                    @DrivingReg.Cancel
                                </button>
                                <button type="button" data-loading-text="Saving..." class="btn btn-primary" id="save
                                        ">
                                    @DrivingReg.Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            @*<div style="max-height: 300px; padding-bottom: 15px; width:auto; overflow:auto;" >*@
            @*<div style="padding-right:0px" class="row col-md-12">*@

            <table id="timeRegTable" class="projects-table table table-striped table-bordered table-hover dataTable no-footer" cellspacing="0" width="100%" role="grid" aria-describedby="example_info" style="width: 100%;">
                <thead>
                    <tr style="width: 100%">
                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@DrivingReg.Date</th>
                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@DrivingReg.From</th>
                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@DrivingReg.To</th>
                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@DrivingReg.StartMileage</th>
                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@DrivingReg.EndMileage</th>
                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@DrivingReg.Distance</th>
                        <th rowspan="1" colspan="1"><button data-caseId="" id="drivingregTableReload" class="btn btn-xs btn-danger"><i class="fa fa-refresh"></i></button></th>
                    </tr>
                </thead>
                <tbody id="drivingRegTBody"></tbody>
            </table>
            @*</div>*@
            @*</div>*@

        </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
</div>

