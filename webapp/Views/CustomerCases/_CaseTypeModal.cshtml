@using CRM.Application.Core.Resources.Customers
@using CRM.Application.Core.Resources.TimeRegistrations
@model CRM.Application.Core.ViewModels.CustomerCaseDatatableViewModel
@{
    Layout = null;
}
@Html.HiddenFor(x => x.CurrentUserID, new { id = "hiddenCurrentUserId" })
<div class="modal-dialog modal-md">
<div class="modal-content" id="modalContent">
    <div class="modal-header">
        <button style="color: white" type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title" style="" id="myModalLabel">@Customer.Case @Customer.Types</h4>
    </div>
    <div class="modal-body">
        <div class="panel-group smart-accordion-default" id="accordion-3">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion-3" href="#collapseOne-2" aria-expanded="false" class="collapsed"> <i class="fa fa-fw fa-plus-circle txt-color-green"></i> <i class="fa fa-fw fa-minus-circle txt-color-red"></i>@TimeReg.Create</a></h4>
                </div>
                <div id="collapseOne-2" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label for="typeName">@Customer.Type @Customer.Name</label>
                                    <input class="form-control" placeholder="" id="typeName" />
                                </div>
                            </div>
                            <div class="col-md-2 smart-form">

                                <label for="invoiced">@Customer.Invoiced</label>
                                <label style="margin-top: 6px;" class="toggle">
                                    <input id="invoiced" type="checkbox" name="checkbox-toggle">
                                    <i style="left: 0;" data-swchon-text="Yes" data-swchoff-text="No"></i>
                                </label>
                            </div>
                            <div class="col-md-2 smart-form">

                                <label for="repeats">@Customer.Repeats</label>
                                <label style="margin-top: 6px;" class="toggle">
                                    <input id="repeats" type="checkbox" name="checkbox-toggle">
                                    <i style="left: 0;" data-swchon-text="Yes" data-swchoff-text="No"></i>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="CaseTypeDescription">@Customer.Description</label>
                                    <textarea class="form-control" id="CaseTypeDescription" placeholder="@Customer.Case @Customer.Type @Customer.Description" rows="5" required></textarea>
                                </div>
                            </div>
                        </div>
                        <div id="repeatDiv" style="display: none">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="repeatPlanner">@Customer.WhoPlansTheRepeat</label>
                                        <select class="form-control" id="repeatPlanner"></select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="repeatDate">@Customer.Repeats</label>
                                        <select class="form-control" placeholder="" id="repeatDate">
                                            <option value="P1D">@Customer.P1D</option>
                                            <option value="P2D">@Customer.P2D</option>
                                            <option value="P7D">@Customer.P7D</option>
                                            <option value="P14D">@Customer.P14D</option>
                                            <option value="P1M">@Customer.P1M</option>
                                            <option value="P2M">@Customer.P2M</option>
                                            <option value="P3M">@Customer.P3M</option>
                                            <option value="P4M">@Customer.P4M</option>
                                            <option value="P6M">@Customer.P6M</option>
                                            <option value="P1Y">@Customer.P1Y</option>
                                            <option value="P2Y">@Customer.P2Y</option>
                                            <option value="P3Y">@Customer.P3Y</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="planedDaysBefore"><i class="fa fa-bell"></i> @Customer.daysBeforeRepeat</label>
                                        <select class="form-control" id="planedDaysBefore">
                                            <option value="P0D">0</option>
                                            <option value="P1D">1</option>
                                            <option value="P2D">2</option>
                                            <option value="P3D">3</option>
                                            <option value="P4D">4</option>
                                            <option value="P5D">5</option>
                                            <option value="P6D">6</option>
                                            <option value="P7D">7</option>
                                            <option value="P8D">8</option>
                                            <option value="P9D">9</option>
                                            <option value="P10D">10</option>
                                            <option value="P11D">11</option>
                                            <option value="P12D">12</option>
                                            <option value="P13D">13</option>
                                            <option value="P14D">14</option>
                                            <option value="P15D">15</option>
                                            <option value="P16D">16</option>
                                            <option value="P17D">17</option>
                                            <option value="P18D">18</option>
                                            <option value="P19D">19</option>
                                            <option value="P20D">20</option>
                                            <option value="P21D">21</option>
                                            <option value="P28D">28</option>
                                            <option value="P35D">35</option>
                                            <option value="P42D">42</option>
                                            <option value="P49D">49</option>
                                            <option value="P56D">56</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div>
                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                    @TimeReg.Cancel
                                </button>
                                <button type="button" data-loading-text="Saving..." class="btn btn-primary" id="saveCaseTypeBtn">
                                    @TimeReg.Create
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table id="caseTypeTable" class="projects-table table table-striped table-bordered table-hover dataTable no-footer" cellspacing="0" width="100%" role="grid" aria-describedby="example_info" style="width: 100%;">
                <thead>
                <tr style="width: 100%">
                    <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-sort="ascending">@Customer.Title</th>
                    <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@Customer.Invoiced</th>
                    <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1">@Customer.Repeats</th>
                    <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1"></th>
                </tr>
                </thead>
                <tbody id="caseTypeTBody"></tbody>
            </table>


        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
</div>
<link href="~/Scripts/plugin/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/plugin/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/plugin/datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/plugin/locale/da.js"></script>
<link href="~/Scripts/plugin/datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />

