
@model CRM.Application.Core.ViewModels.CustomerCaseDatatableViewModel
@using X.PagedList.Mvc;

<div class="dt-toolbar-footer">
    <div class="col-sm-6 col-xs-12 hidden-xs">
        <div class="dataTables_info" id="datatable_fixed_column_info" role="status" aria-live="polite">Showing <span class="txt-color-darken" id="paginationFromNumber">@Model.PageNumber</span> to <span class="txt-color-darken" id="paginationToNumber">@(Model.PageNumber * Model.PageSize)</span> of <span class="text-primary" id="paginationTotalCount">@(Model.QueryCount)</span> entries</div>
    </div>
    <div class="col-xs-12 col-sm-6">
        <div class="dataTables_paginate paging_simple_numbers" id="datatable_fixed_column_paginate">
            @Html.PagedListPager(Model.CustomerCases, page => null, new PagedListRenderOptions
            {

                LinkToNextPageFormat = "Next",
                LinkToPreviousPageFormat = "Previous",
                ActiveLiElementClass = "active",
                LiElementClasses = new string[] { "LiPager" },
                FunctionToTransformEachPageLink = (liTag, aTag) => { aTag.Attributes.Add("data-pageNumber", aTag.InnerHtml); liTag.InnerHtml = aTag.ToString(); return liTag; }
            })
        </div>
    </div>
</div>
