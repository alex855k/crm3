@model CRM.Application.Core.ViewModels.DailyReportViewModel

<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@CRM.Application.Core.Resources.Reports.DailyReport.DailyReportTitle </h2>
                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <div id="datatable_fixed_column_wrapper" class="dataTables_wrapper form-inline no-footer">
                                <div class="dt-toolbar">
                                    <div class="col-xs-12 col-sm-6 hidden-xs">
                                        <div id="datatable_fixed_column_filter" class="dataTables_filter">
                                            <label>
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                                <input id="commonFilter" type="search" class="form-control" placeholder="" aria-controls="datatable_fixed_column">
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-6 hidden-xs pull-right">
                                        <div id="datatable_fixed_column_filter" class="dataTables_filter">
                                            <label>
                                                @if (AuthorizationService.AuthorizeRenderHTML("DailyReportUserSelection", "DailyReport"))
                                                {
                                                    {Html.RenderPartial("_DailyReportUserSelection", Model); }
                                                }
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <table id="datatable_fixed_column" class="table table-striped table-bordered dataTable no-footer" width="100%" role="grid" aria-describedby="datatable_fixed_column_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th data-searchKey="Date" data-selectedOperator="Equals" class="sortTable sorti  ng_asc query" data-sortKey="Date" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 187px;">
                                                @CRM.Application.Core.Resources.General.General.Date
                                            </th>
                                            <th data-searchKey="KmFrom" data-selectedOperator="Contains" class="sortTable sorting query" data-activesort="" data-sort="" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 200px;">
                                                @CRM.Application.Core.Resources.Reports.DailyReport.KMFrom
                                            </th>
                                            <th data-searchKey="KmTo" data-selectedOperator="Contains" class="sortTable sorting query" data-sortKey="Address" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 200px;">
                                                @CRM.Application.Core.Resources.Reports.DailyReport.KMTo
                                            </th>
                                            <th class="sortTable sorting" data-sortKey="PostalCode" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 174px;">
                                                @CRM.Application.Core.Resources.Reports.DailyReport.KMTotal
                                            <th tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 178px;">
                                                @CRM.Application.Core.Resources.General.General.Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="dailyReportListDiv">
                                        @{Html.RenderPartial("_DailyReportList", Model);}
                                    </tbody>
                                </table>
                                <div id="dailyReportPaginationDiv">
                                    @{Html.RenderPartial("_DailyReportPagination", Model);}
                                </div>
                                
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
<!-- Modal -->
<div class="modal fade" id="dailyReportModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">@CRM.Application.Core.Resources.Reports.DailyReport.DailyReportTitle</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <hidden id="hiddenDailyReportId"></hidden>
                            <h2><span>@CRM.Application.Core.Resources.Reports.DailyReport.DailyReportTitle @CRM.Application.Core.Resources.General.General.Date: </span><span id="dailyReportDate"></span></h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="tags">@CRM.Application.Core.Resources.Reports.DailyReport.KMFrom</label>
                            <input type="number" class="form-control" id="kmFrom" placeholder="@CRM.Application.Core.Resources.Reports.DailyReport.KMFrom" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="tags">@CRM.Application.Core.Resources.Reports.DailyReport.KMTo</label>
                            <input type="number" class="form-control" id="kmTo" placeholder="@CRM.Application.Core.Resources.Reports.DailyReport.KMTo" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    @CRM.Application.Core.Resources.General.General.Cancel
                </button>
                <button id="saveDailyReport" type="button" class="btn btn-primary">
                    @CRM.Application.Core.Resources.General.General.Save
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script src="~/Scripts/CRM/DailyReport/DailyReport.js"></script>
