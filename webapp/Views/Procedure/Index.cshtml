@model CRM.Application.Core.ViewModels.ProcedureViewModel
<link rel="stylesheet" href="~/Content/css/print-procedure.css" media="print" />

<!-- MAIN CONTENT -->
<div id="content">
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>@CRM.Application.Core.Resources.Procedures.Procedure.AProcedure</h2>
                    </header>

                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <div id="datatable_fixed_column_wrapper" class="dataTables_wrapper form-inline no-footer">
                                <div class="dt-toolbar">
                                    <div class="col-xs-12 col-sm-6 hidden-xs">
                                        <div id="datatable_fixed_column_filter" class="dataTables_filter">
                                            <label>
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                                <input id="commonFilter" type="search" class="form-control" placeholder="" aria-controls="datatable_fixed_column">
                                            </label>
                                        </div>
                                    </div><div class="col-sm-6 col-xs-12 hidden-xs">

                                        <div class="toolbar">

                                            <div class="text-right">
                                                <a class="btn btn-primary" href="@Url.Action("Create", "Procedure")">@CRM.Application.Core.Resources.Procedures.Procedure.AddNewProcedure</a>
                                                <!--TODO: Add translation-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table id="datatable_fixed_column" class="table table-striped table-bordered dataTable no-footer" width="100%" role="grid" aria-describedby="datatable_fixed_column_info" style="width: 100%;">
                                    <thead>
                                        <tr id="filterTr" role="row">
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                                <div class="input-group">
                                                    <input id="companyName" data-searchKey="companyName" data-selectedOperator="Contains" class="form-control query defaultSort" placeholder="@CRM.Application.Core.Resources.DynamicTable.Filtering.Filter @CRM.Application.Core.Resources.Procedures.Procedure.AProcedure @CRM.Application.Core.Resources.Procedures.Procedure.Title" type="text">
                                                    <div style="padding:5px" class="input-group-addon">
                                                        <div class="btn-group">
                                                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                                                <span class="fa fa-filter"></span>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li class="active">
                                                                    <a class="operatorDropdown" data-operator="Contains" data-forInput="companyName" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterContains</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="StartsWith" data-forInput="companyName" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterStartsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="EndsWith" data-forInput="companyName" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterEndsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="Equals" data-forInput="companyName" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterEquals</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="NotEqual" data-forInput="companyName" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterNotEqual</a>
                                                                </li>
                                                            </ul>
                                                        </div>

                                                    </div>
                                                </div>
                                            </th>
                                            <th class="hasinput" style="width:18%" rowspan="1" colspan="1">
                                            </th>
                                            <th class="hasinput" style="width:16%" rowspan="1" colspan="1">
                                                <div class="input-group">
                                                    <input id="address" data-searchKey="Address" data-selectedOperator="Contains" class="form-control query" placeholder="Filter Created" type="text">
                                                    <div style="padding:5px" class="input-group-addon">
                                                        <div class="btn-group">
                                                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                                                <span class="fa fa-filter"></span>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li class="active">
                                                                    <a class="operatorDropdown" data-operator="Contains" data-forInput="address" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterContains</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="StartsWith" data-forInput="address" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterStartsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="EndsWith" data-forInput="address" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterEndsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="Equals" data-forInput="address" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterEquals</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="NotEqual" data-forInput="address" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterNotEqual</a>
                                                                </li>
                                                            </ul>
                                                        </div>

                                                    </div>
                                                </div>
                                            </th>
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                                <div class="input-group">
                                                    <input id="postalCode" data-searchKey="PostalCode" data-selectedOperator="Contains" class="form-control query" placeholder="Filter Edited" type="text">
                                                    <div style="padding:5px" class="input-group-addon">
                                                        <div class="btn-group">
                                                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                                                <span class="fa fa-filter"></span>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li class="active">
                                                                    <a class="operatorDropdown" data-operator="Contains" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterContains</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="StartsWith" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterStartsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="EndsWith" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterEndsWith</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="Equals" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterEquals</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThan" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterGreaterThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="GreaterThanOrEqual" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterGreaterThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThan" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterLessThan</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="LessThanOrEqual" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterLessThanOrEqual</a>
                                                                </li>
                                                                <li>
                                                                    <a class="operatorDropdown" data-operator="NotEqual" data-forInput="postalCode" href="javascript:void(0);">@CRM.Application.Core.Resources.DynamicTable.Filtering.FilterNotEqual</a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </th>
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                                
                                            </th>
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                                
                                            </th>
                                            <th class="hasinput" style="width:17%" rowspan="1" colspan="1">
                                            </th>
                                        </tr>
                                        <tr role="row">
                                            <th class="sortTable sorti  ng_asc" data-sortKey="" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1"
                                                aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 187px;">
                                                @CRM.Application.Core.Resources.Procedures.Procedure.Image
                                            </th>
                                            <th class="sortTable sorti  ng_asc" data-sortKey="" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1"
                                                aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 187px;">
                                                @CRM.Application.Core.Resources.Procedures.Procedure.Title
                                            </th>
                                            <th class="sortTable sorti  ng_asc" data-sortKey="" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1"
                                                aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 187px;">
                                                @CRM.Application.Core.Resources.Procedures.Procedure.Status
                                            </th>
                                            <th class="sortTable sorting" data-activesort="" data-sort="" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1"
                                                aria-label="Position: activate to sort column ascending" style="width: 200px;">
                                                @CRM.Application.Core.Resources.Procedures.Procedure.Created
                                            </th>
                                            <th class="sortTable sorting" data-sortKey="Address" tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1"
                                                aria-label="Position: activate to sort column ascending" style="width: 200px;">
                                                @CRM.Application.Core.Resources.Procedures.Procedure.Edited
                                            </th>
                                            <th tabindex="0" aria-controls="datatable_fixed_column" rowspan="1" colspan="1"
                                                aria-label="Start date: activate to sort column ascending" style="width: 178px;">
                                                @CRM.Application.Core.Resources.General.General.Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="proceduresListDiv">
                                        @{Html.RenderPartial("_ProcedureList", Model);}
                                    </tbody>
                                </table>
                                <div id="proceduresPaginationDiv">
                                    @{Html.RenderPartial("_ProcedurePagination", Model);}
                                </div>
                            </div>
                            <div class="row smart-form">
                                <section class="col col-3">
                                    <label class="toggle">
                                        @Html.HiddenFor(x => x.QueryOperatorComparer, new { @name = "tableComparer", @id = "hiddenTableComparer" })
                                        <input type="checkbox" id="switchTableComparer" name="checkbox-toggle" checked="checked">
                                        <i data-swchon-text="@CRM.Application.Core.Resources.DynamicTable.Filtering.And" data-swchoff-text="@CRM.Application.Core.Resources.DynamicTable.Filtering.Or"></i> @CRM.Application.Core.Resources.DynamicTable.Filtering.SearchComparer
                                    </label>
                                </section>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->

<script src="~/Scripts/CRM/Enum/SortDirection.js"></script>