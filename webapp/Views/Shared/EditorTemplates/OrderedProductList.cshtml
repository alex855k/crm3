@model IEnumerable<CRM.Models.OrderedProduct>

@foreach (var item in Model) {
    <div class="row product">
        @Html.HiddenFor(x=> item.Id, new { @id = "OrderedProductId" })
        <section class="col col-6">
            <div class="input">
                <input name="product" type="text" placeholder="Write anything..." value=@item.Product />
            </div>
        </section>
        <section class="col col-1">
            <div class="input">
                <input name="quantity" type="number" min="1" placeholder="Quantity" value=@item.Quantity />
            </div>
        </section>
        <section class="col col-1">
            <button type="button" class="btn btn-primary btn-sm editable-submit" style="display:none">
                <i class="glyphicon glyphicon-ok"></i>
            </button>
            <button type="button" class="btn btn-default btn-sm editable-cancel">
                <i class="glyphicon glyphicon-remove"></i>
            </button>
        </section>
    </div>
}